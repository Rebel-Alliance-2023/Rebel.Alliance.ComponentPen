            margin-bottom: 1rem;
        }

        .layout-preview .featured-content {
            background-color: rgba(0, 0, 0, 0.05);
            padding: 2rem;
            text-align: center;
            margin-bottom: 1rem;
        }

        .layout-preview .articles-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
