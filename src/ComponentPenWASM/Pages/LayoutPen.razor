        }

        .layout-preview main {
            flex: 2;
            padding: 1rem;
        }

        .layout-preview .grid-content {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

            .layout-preview .grid-content > div {
                background-color: rgba(0, 0, 0, 0.05);
                padding: 1rem;
            }

        .layout-preview .centered-content {
            display: flex;
            justify-content: center;
            align-items: center;
